<MainScreen>:
    name: 'main'
    on_enter: root.thread_func()
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: 'test'
        size: 100, 100
        font_size: 30
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.pressed()

    DPEAButton:
        text: ("0")
        id: click_counter
        size: 100, 100
        font_size: 30
        x: root.width * 0.25
        y:root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.clickPressed(self.text)

    DPEAButton:
        text: ("On")
        id: toggle_text
        size: 100, 100
        font_size: 30
        x: root.width * 0.5
        y:root.height * 0.75
        color: 1, 0, 0, 1
        on_press: root.togglePressed(self.text)

    Label:
        text: "Motor On"
        id: toggle_motor_label
        size: 100, 100
        font_size: 30
        pos_hint:{"y":-.3,"x": .04}
        color: 0, 0, 0, .5

    Label:
        id: joystick_label
        font_size: 30
        center_x: root.width * 0
        center_y: root.height * 0.25
        color: 0, 0, 0, 1

    Label:
        id: joy_pos_label
        text: "o"
        font_size: 30
        x: (root.width / 2) + (root.width / 2)
        y: (root.height / 2) + (root.height / 2)
        color: 0, 0, 0, 1

    Label:
        id: coords
        font_size: 30
        center_x: root.width * 0.1
        center_y: root.height * 0.05
        color: 0, 0, 0, 1


    DPEAButton:
        text: "Motor"
        size: 100, 100
        font_size: 30
        x: root.width * 0.5
        y: root.height * 0.25
        color: 1, 0, 0, 1
        on_press: root.motorPressed(toggle_motor_label.text)

    Slider:
        id: slider
        size_hint_x: .33
        size_hint_y: .25
        x: root.width * 0.37
        y: root.height * -.05
        min: 0
        max: 100
        step: 1

        orientation: 'horizontal'

    Label:
        text: str(slider.value)
        size: 100, 100
        font_size: 30
        pos_hint:{"y":-.4,"x": .04}
        color: 0, 0, 0, .5

    ImageButton:
        id: logo_image_button
        source: "../../Desktop/sbcc.jpg"
        size: 100, 100
        font_size: 30
        x: root.width * 0.5
        y: root.height * 0.5
        on_press: root.imagePressed()


    ImageButton:
        id: anim_button_main
        source: "../../Desktop/stanford.png"
        size: 80, 100
        font_size: 30
        x: root.width * 0.05
        y: root.height * 0.8
        on_press: root.stanfordPressed()
        on_release: root.stanfordReleased()